<%- include('partials/header', {current: '/home'}); %>
<%- include('partials/navigation', {current: '/home'}); %>

<h1>Mijn favorieten</h1>

<main>

<form class="dropdown">
    <legend>Sorteer op:</legend>
    <div class="sort">
        <!-- Sorteer deze pagina standaard, op stad of prijs -->
        <a href="/<%= houses[0].id %>"> Standaard</a>
        <a href="/<%= houses[0].id %>/?sort=city"> Stad</a>
        <a href="/<%= houses[0].id %>/?sort=price"> Prijs</a>
    </div>
</form>
 
<% houses.forEach(house => { %>
    <ul class="favorites">
        <li>
            <figure>
                <img src="https://fdnd-agency.directus.app/assets/<%= house.poster_image %>" alt="house image">
            </figure>
            <article>
                <h2><a href="#"><%= house.street %> <%= house.house_nr + house.nr_addition%></a></h2>
                <p><%= house.postal_code %> <%= house.city%></p>
                <p><%= "â‚¬" + house.price %></p>
            </article>
            <button></button>
            <button></button>
            <button class="heart"></button>
        </li>
    </ul>
<% }); %>

